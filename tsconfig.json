{
  "compilerOptions": {
    "outDir": "./dist",
    "pretty": true,
    "target": "es2022",
    "lib": [
      "es2019",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "commonjs",
    "allowJs": false,
    "sourceMap": true,
    "strict": true,
    "declaration": true,
    "importHelpers": true,
    "noImplicitAny": false, // Needed to compile tap and ansi-escapes
    "esModuleInterop": true,
  },
  "include": [
      "./lib/**/*"
  ]
}
